                          <!DOCTYPE html>
                          <html lang="en">
                          <head>
                              <meta charset="UTF-8">
                              <meta http-equiv="X-UA-Compatible" content="IE=edge">
                              <meta name="viewport" content="width=device-width, initial-scale=1.0">
                              <title>Document</title>
                              <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
                              <style>
                                  body {
                                      font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
                                      background-color: #cecdcd;
                                      margin: 0;
                                      padding: 0;
                                  }

                                  .container {
                                      max-width: 1200px;
                                      margin: 0 auto;
                                      padding: 20px;
                                  }

                                  .filter select {
                                      padding: 8px 12px;
                                      font-size: 16px;
                                      border-radius: 5px;
                                      border: 1px solid #ffffff;
                                      font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
                                  }

                                  .filter {
                                      display: flex;
                                      justify-content: center;
                                      align-items: center;
                                      margin-bottom: 20px;
                                      font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
                                  }

                                  .row {
                                      display: flex;
                                      justify-content: center;
                                      align-items: flex-start;
                                      flex-wrap: wrap;
                                      gap: 35px;
                                  }

                                  .main {
                                      background-color: #ffffff;

                                      border-radius: 6px;
                                      padding: 20px;
                                      width: calc(33.33% - 20px);
                                      box-sizing: border-box;
                                  }

                                  .main p {
                                      margin: 10px 0;
                                  }

                                  .button {
                                      background-color: rgb(25, 25, 232);
                                      color: white;
                                      padding: 8px 16px;
                                      border: none;
                                      border-radius: 5px;
                                      cursor: pointer;
                                      text-decoration: none;
                                      display: inline-block;
                                  }

                                  .button:hover {
                                      background-color: #a4c9f0;
                                  }

                                  .icons {
                                      margin-top: 10px;
                                  }

                                  .icons button {
                                      background: none;
                                      border: none;
                                      cursor: pointer;
                                  }

                                  .icons span {
                                      font-size: 20px;
                                      margin-left: 5px;
                                  }

                                  .fa-heart,
                                  .fa-trash {
                                      color: #555;
                                  }

                                  .p {
                                      font-weight: 600;
                                  }
                              </style>
                          </head>
                          <body>
                              <div class="filter">
                                  <form method="get" action="/home">
                                      <select name="branch" onchange="this.form.submit()">
                                          <option>Search By Filter</option>
                                          <option value="all">all</option>
                                          <option value="it">IT</option>
                                          <option value="cse">CSE</option>
                                          <option value="mech">MECH</option>
                                          <option value="ece">ECE</option>
                                      </select>
                                  </form>
                              </div>
                              <div class="row">
                                  <% for(let i = 0; i < data.length; i++) { %>
                                  <div class="main">
                                      <p><span class="p">Complaint :</span><span> <%= data[i].complaint %></span></p>
                                      <p><span class="p">Details :</span><span> <%= data[i].complaintcontent %></span></p>
                                      <a class="button" href="/viewMore/<%= data[i]._id %>"> View More</a>&nbsp&nbsp&nbsp
                                      <div class="icons" style="display:flex; flex-direction:row; gap:15px;">
                                          <form method="post" action="/like/<%=data[i]._id %>">
                                              <button style="background:none; border:none;cursor:pointer; margin-top:5px;" type="submit">
                                                  <i class="fa-solid fa-heart"></i>
                                              </button>
                                          </form>
                                          <span style="font-size:20px; "><%= data[i].count %></span>

                                          <form method="post" action="/delete/<%= data[i]._id %>">
                                              <button style="background:none; border:none;cursor:pointer;" type="submit"> <i class="fa fa-trash"></i></button>
                                          </form>


                                      </div>
                                  </div>
                                  <% } %>
                              </div>
                          </body>
                          </html>
